<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <FrameLayout
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="25dp" >

            <Button
                android:id="@+id/attach_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@android:color/holo_green_dark"
                android:gravity="center"
                android:onClick="startAttach"
                android:text="绑定测试" />

            <Button
                android:id="@+id/start_test"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:background="@android:color/holo_green_dark"
                android:gravity="center"
                android:onClick="startDownload"
                android:text="下载测试" />
        </FrameLayout>

        <com.owl.downloadview.view.RectangelDownloadView
            android:id="@+id/download_test_01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title" />

        <com.owl.downloadview.view.RectangelDownloadView
            android:id="@+id/download_test_02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/download_test_01"
            android:layout_marginTop="25dp" />

        <com.owl.downloadview.view.RectangelDownloadView
            android:id="@+id/download_test_03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/download_test_02"
            android:layout_marginTop="25dp" />

        <com.owl.downloadview.view.RectangelDownloadView
            android:id="@+id/download_test_04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/download_test_03"
            android:layout_marginTop="25dp" />

        <com.owl.downloadview.view.RectangelDownloadView
            android:id="@+id/download_test_05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/download_test_04"
            android:layout_marginTop="25dp" />
    </RelativeLayout>

</ScrollView>